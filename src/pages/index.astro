---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.tsx';
import { getBlogPosts } from '../db/blog';
const filteredBlogPosts = getBlogPosts().sort((a, b) => Number(new Date(b.metadata.date)) - Number(new Date(a.metadata.date)));
---
<BaseLayout>
  <div class="flex flex-col items-start justify-start max-w-4xl mx-auto w-full pb-16">
    <h1 class="font-bold text-6xl dark:text-gray-200">My name is Jacob.</h1>
    <h2 class="text-gray-700 dark:text-gray-200 mb-4 text-2xl">
      I am an experienced Software Engineer @
      <a href="https://www.leantechniques.com" target="_blank" rel="noreferrer">Lean TECHniques</a>
    </h2>
  </div>
  <div class="items-center justify-between w-full relative max-w-4xl mx-auto">
    <h3 class="font-bold text-2xl md:text-4xl tracking-tight mb-6 text-black dark:text-white">Writing</h3>
    {filteredBlogPosts.length === 0 ? (
      <p class="mb-4 text-gray-600 dark:text-gray-400">No posts found.</p>
    ) : (
      filteredBlogPosts.map(post => <BlogPost blog={post} />)
    )}
  </div>
</BaseLayout>
